<!-- CADASTRO-->
    <h3 class="mt-5" id="tituloCadastro">Cadastro de Usuário</h3>

    <!--DIVISÓRIA--->
    <div class="container">
        <hr class="text-center"></hr> 
    </div>   

    <!--FORM-->
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-12 col-md-8 bg-light text-md-right text-sm-center border-radius">
                <form action="/add" method="POST" class="mt-3">
                    <!--NOME-->
                    <div class="form-group row">
                        <label for="nome" class="col-sm-4 col-form-label">Nome : </label>
                        <div class="col-sm-8">
                            <input class="form-control shadow-sm border-radius" type="text" name="nome" placeholder="John Winston">
                        </div>
                    </div>
                     <!--SOBRENOME-->
                    <div class="form-group row">
                        <label for="sobrenome" class="col-sm-4 col-form-label">Sobrenome : </label>
                        <div class="col-sm-8">
                            <input class="form-control shadow-sm border-radius" type="text" name="sobrenome" placeholder="Lennon">
                        </div>
                    </div>
                    <!--DATA DE NASCIMENTO-->
                    <div class="form-group row">
                        <label for="data_nascimento" class="col-sm-4 col-form-label">Data de Nascimento : </label>    
                        <div class="col-sm-8">    
                            <input class="form-control shadow-sm border-radius" name="data_nascimento" type="date">
                        </div>
                    </div>
                    <!--GÊNERO-->
                    <div class="form-group row">
                        <label for="genero" class="col-sm-4 col-form-label mt-1">Gênero : </label>
                        <div class="col-sm-8">  
                            <select class="custom-select my-1 mr-sm-2 shadow-sm border-radius" name="genero" >
                                <option selected>Selecione...</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                                <option value="Outros">Outros</option>
                            </select>   
                        </div>
                    </div>       
                    <!--EMAIL-->
                    <div class="form-group row">
                        <label for="email" class="col-sm-4 col-form-label">Email : </label>
                        <div class="col-sm-8">
                            <input class="form-control shadow-sm border-radius" type="text" name="email" placeholder="john@beatles.com">
                        </div>
                    </div>
                    <!--TELEFONE-->
                    <div class="form-group row">
                        <label for="telefone" class="col-sm-4 col-form-label">Telefone : </label>
                        <div class="col-sm-8">
                            <input class="form-control shadow-sm border-radius" type="tel" name="telefone" placeholder="(99) 99999-9999" id="campoTelefone">
                        </div>
                    </div>
                    <!--ATIVO-->
                    <div class="form-group row">
                        <label for="ativo" class="col-sm-4 col-form-label mt-1">Ativo : </label>
                            <div class="col-sm-8">  
                                <select class="custom-select my-1 mr-sm-2 shadow-sm border-radius" name="ativo" >
                                    <option value="1" selected>Sim</option>
                                    <option value="0">Não</option>
                                </select>   
                            </div>
                    </div>
                    <!--SUBMIT--->
                    <div class="form-group row">
                        <button class="btn btn-outline-success col-12 shadow  border-radius" type="submit" id="btnEnviar">Enviar !</button>
                    </div>
                </form>   
            </div>
            <div class="col-md-2"></div>
        </div> 
        <!--DIVISÓRIA--->
        <div class="container">
            <hr class="text-center"></hr> 
        </div>   
    </div>  